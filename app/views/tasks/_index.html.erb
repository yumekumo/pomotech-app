<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>説明</th>
      <th>セット数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task), class: "task_#{task.id}" %></td>
        <td><%= task.body %></td>
        <td><i class="far fa-clock"></i> <%= task.pomodoros.count %></td>
        <% if !task.is_finished? %>
          <td><%= link_to '開始', timer_task_path(task), class: "btn btn-sm btn-primary timer_task_path_#{task.id}" %></td>
        <% else %>
          <td><%= link_to '詳細', task_path(task), class: "btn btn-sm btn-info task_path_#{task.id}" %></td>
        <% end %>
        <td><%= link_to '編集', edit_task_path(task), class: "btn btn-sm btn-success edit_task_#{task.id}" %></td>
        <td><%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に消しますか？(セット数は残ります)' }, class: "btn btn-sm btn-danger destroy_task_#{task.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>