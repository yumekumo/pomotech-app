<%= form_with model:task,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title, "タスク名" %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :description, "説明(省略可)" %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  <% if task.id.present? %>
    <div class="form-group">
      <div class="form-check">
        <%= f.radio_button :is_finished, :false, class: 'form-check-input' %>
        <%= f.label :is_finished, "未完了", {value: :false, style: "display: inline-block;"} %>
      </div>
      <div class="form-check">
        <%= f.radio_button :is_finished, :true, class: 'form-check-input' %>
        <%= f.label :is_finished, "完了済み", {value: :true, style: "display: inline-block;"} %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "作成", class: 'btn btn-success' %>
  </div>
<% end %>